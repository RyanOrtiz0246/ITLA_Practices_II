@model SalesDataAnalysisPlatformMVC.Data.Sale

<h2>Detalles de la Venta</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.SaleID</dd>

        <dt class="col-sm-2">Cliente:</dt>
        <dd class="col-sm-10">@Model.ClientID</dd>

        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.DateSale.ToShortDateString()</dd>

        <dt class="col-sm-2">Monto:</dt>
        <dd class="col-sm-10">@Model.Amount</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.SaleID" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>